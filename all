<script>
  // Î‘Î½Î¿Î¯Î³ÎµÎ¹ Ï„Î¿ ÏƒÏ‰ÏƒÏ„ÏŒ section details ÏŒÏ„Î±Î½ Ï€Î±Ï„Î¬Ï‚ ÏƒÎµ service card
  function openService(key){
    const map = {
      party: document.getElementById('party-details'),
      activities: document.getElementById('activities-details'),
      study: document.getElementById('study-details'),
    };
    // ÎºÎ»ÎµÎ¯ÏƒÎµ ÏŒÎ»Î±
    Object.values(map).forEach(d => d && (d.open = false));
    // Î¬Î½Î¿Î¹Î¾Îµ Ï„Î¿ ÎµÏ€Î¹Î»ÎµÎ³Î¼Î­Î½Î¿
    if(map[key]) map[key].open = true;
    // Ï€Î®Î³Î±Î¹Î½Îµ ÏƒÏ„Î¿ section
    const section = document.getElementById(key);
    if(section) section.scrollIntoView({behavior:'smooth', block:'start'});
  }

  // enter key support Î³Î¹Î± accessibility (ÏŒÏ„Î±Î½ Ï„Î¿ card Î­Ï‡ÎµÎ¹ focus)
  document.querySelectorAll('.card[role="button"]').forEach(card=>{
    card.addEventListener('keydown', (e)=>{
      if(e.key === 'Enter' || e.key === ' '){
        e.preventDefault();
        card.click();
      }
    });
  });
</script>

